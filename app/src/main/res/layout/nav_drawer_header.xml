<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerNavDrawerListViewHeader"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="@dimen/navDrawerBackground_layout_height"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/relLoginUm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bem vindo "
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_15" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_20"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <View
        android:padding="@dimen/dimens_10"
        android:layout_marginTop="@dimen/dimens_20"
        android:paddingBottom="@dimen/dimens_20"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>